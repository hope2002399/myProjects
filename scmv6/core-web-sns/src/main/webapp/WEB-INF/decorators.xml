    <pattern>/**/outside/*</pattern>
    <pattern>/pubweb/details/show*</pattern>
    <pattern>/pubweb/details/showpdwh*</pattern>
    <pattern>/P/*</pattern>
    <pattern>/G/*</pattern>
    <pattern>/prjweb/project/detailsshow*</pattern>
    <pattern>/psnweb/unsubscribe/mail*</pattern>
    <pattern>/dynweb/news/**</pattern>
  </decorator>
  <decorator name="scm_management" page="skins_scm_management.jsp">
    <pattern>/scmmanagement*</pattern>
  </decorator>
</decorators>
