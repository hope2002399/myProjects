    <pattern>/prjweb/*</pattern>
    <pattern>/inspg/*</pattern>
    <pattern>/scmmanagement/news/*</pattern>
    <!-- <pattern>/AI/*</pattern> <pattern>/BI/*</pattern> <pattern>/SI/*</pattern> -->
    <!-- <pattern>/scmmanagement/*</pattern> -->
  </decorator>
  <decorator name="outside_mvc" page="/skins_mvc/skins_outside_main_nomenu.jsp">
    <pattern>/A/*</pattern>
    <pattern>/B/*</pattern>
    <pattern>/S/*</pattern>
    <pattern>/AI/*</pattern>
    <pattern>/BI/*</pattern>
    <pattern>/SI/*</pattern>
    <pattern>/pub/outside/*</pattern>
    <pattern>/pub/search/psnsearch*</pattern>
    <pattern>/pub/details/*</pattern>
    <!-- <pattern>/inspg/outside/searchins*</pattern> -->
  </decorator>
  <decorator name="outside_nofoot_mvc" page="/skins_mvc/skins_outside_main_nomenu_nofoot.jsp">
    <pattern>/pub/search/pdwh*</pattern>
  </decorator>
  <decorator name="outside" page="/skins_v6/skins_outside_main_nomenu.jsp">
